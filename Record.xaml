<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Eattogo.Record"
             Title="Records Screen">
    <ScrollView>
        <VerticalStackLayout Padding="20">

            <!-- CollectionView for displaying records -->
            <CollectionView x:Name="recordsCollectionView" ItemsSource="{Binding FoodRecords}">
                <CollectionView.ItemTemplate>
                    <DataTemplate>
                        <Frame BorderColor="Gray" Margin="5" Padding="10" CornerRadius="5">
                            <Grid RowSpacing="10" ColumnSpacing="10">
                                <!-- Grid Definitions -->
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                </Grid.RowDefinitions>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto"/>
                                    <!-- Label column -->
                                    <ColumnDefinition Width="*"/>
                                    <!-- Value column -->
                                </Grid.ColumnDefinitions>

                                <!-- Row 0: Food Name and Calories -->
                                <Label Text="Name:" Grid.Row="0" Grid.Column="0" VerticalOptions="Center"/>
                                <Label Text="{Binding Name}" Grid.Row="0" Grid.Column="1" VerticalOptions="Center" HorizontalOptions="End"/>

                                <Label Text="Total Calories:" Grid.Row="1" Grid.Column="0" VerticalOptions="Center"/>
                                <Label Text="{Binding Calories}" Grid.Row="1" Grid.Column="1" VerticalOptions="Center" HorizontalOptions="End"/>

                                <!-- Row 1: Protein -->
                                <Label Text="Protein (g):" Grid.Row="2" Grid.Column="0" VerticalOptions="Center"/>
                                <Label Text="{Binding Protein}" Grid.Row="2" Grid.Column="1" VerticalOptions="Center" HorizontalOptions="End"/>

                                <!-- Row 2: Carbs -->
                                <Label Text="Carbs (g):" Grid.Row="3" Grid.Column="0" VerticalOptions="Center"/>
                                <Label Text="{Binding Carbs}" Grid.Row="3" Grid.Column="1" VerticalOptions="Center" HorizontalOptions="End"/>

                                <!-- Row 3: Fat -->
                                <Label Text="Fat (g):" Grid.Row="4" Grid.Column="0" VerticalOptions="Center"/>
                                <Label Text="{Binding Fat}" Grid.Row="4" Grid.Column="1" VerticalOptions="Center" HorizontalOptions="End"/>
                            </Grid>
                        </Frame>
                    </DataTemplate>
                </CollectionView.ItemTemplate>
            </CollectionView>

        </VerticalStackLayout>
    </ScrollView>
</ContentPage>
